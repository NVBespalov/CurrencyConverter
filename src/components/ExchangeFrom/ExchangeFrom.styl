.container
  height 200px
  background-color #113d92
  align-items center
  opacity 0.7
  color #ffffff
  position relative
  &::after
    content ''
    position absolute
    right 138px
    bottom -20px
    border 10px solid transparent
    border-top 10px solid #113d92
    opacity 0.7
    z-index 2
.rightColumn
  display flex
  flex 1
  align-items center
  padding-right 19px
  justify-content flex-end
  input
    border none
    background-color #113d92
    color #ffffff
    &:focus, active
      outline none
.leftColumn
  display flex
  padding-left 19px
.amount
  font-size 22px
.navigation
  position absolute
  width 100%
  bottom 9px
  display flex
  align-items center
  justify-content center
.navigationBullet
  height 10px
  width 10px
  margin-left 5px
  &::nth-child(1)
    margin-left 0

.navigationWrapper
  display flex
  flex-direction row
